---
  - name: Update & upgrade packages
    apt:
      upgrade: 'True'
      update_cache: yes


  - name: Clone a bootcamp-app from github
    git:
      repo: https://github.com/benkatzav/bootcamp-app.git
      dest: /home/ubuntu/bootcamp-app
      clone: yes
      update: yes

  - name: Creates the .env File
    template:
      src: ../templates/.env.j2
      dest: /{{ app_dir }}/.env
